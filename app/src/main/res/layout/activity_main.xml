<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableLayout>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35sp"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35sp"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/temizle_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple_200"
                    android:onClick="temizle"
                    android:text="C"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/sil_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple_500"
                    android:onClick="sil"
                    android:text="sil"
                    android:textSize="35sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/bir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple_200"
                    android:onClick="bir"
                    android:text="1"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/iki"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple_200"
                    android:onClick="iki"
                    android:text="2"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/uc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple_200"
                    android:onClick="uc"
                    android:text="3"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/arti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple_500"
                    android:onClick="arti"
                    android:text="+"
                    android:textSize="35sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/dort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple_200"
                    android:onClick="dort"
                    android:text="4"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/bes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple_200"
                    android:onClick="bes"
                    android:text="5"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/alti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple_200"
                    android:onClick="alti"
                    android:text="6"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/eksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple_500"
                    android:onClick="eksi"
                    android:text="-"
                    android:textSize="35sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/yedi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple_200"
                    android:onClick="yedi"
                    android:text="7"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/sekiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple_200"
                    android:onClick="sekiz"
                    android:text="8"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/dokuz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple_200"
                    android:onClick="dokuz"
                    android:text="9"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/carpi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple_500"
                    android:onClick="carpi"
                    android:text="*"
                    android:textSize="35sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/nokta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple_200"
                    android:onClick="nokta"
                    android:text="."
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/sifir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple_200"
                    android:onClick="sifir"
                    android:text="0"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/negatif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple_200"
                    android:onClick="negatif"
                    android:text="+/-"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/bölü"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple_500"
                    android:onClick="bolu"
                    android:text="/"
                    android:textSize="35sp" />

            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/esittir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_500"
            android:onClick="esittir"
            android:text="="
            android:textSize="35sp" />

    </TableLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/sonuc_ekrani"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/islem_ekrani_bir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:onClick="islem_ekrani_bir"
            android:textColor="@color/purple_200"
            android:textColorHint="@color/purple_500"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/islem_ekrani_uc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_200"
            android:textColorHint="#80FFFFFF"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/islem_ekrani_iki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="islem_ekrani_iki"
            android:textColor="@color/purple_200"
            android:textColorHint="#80FFFFFF"
            android:textSize="50sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/sonuc_ekrani"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_500"
        android:textColorHint="#80FFFFFF"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

</androidx.constraintlayout.widget.ConstraintLayout>